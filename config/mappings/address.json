{
  "mappings": {
    "_source": {
      "excludes": ["rich_list"]
    },
    "properties": {
      "hash": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "height": {"type": "long"},
      "spending": {"type": "long"},
      "staking": {"type": "long"},
      "voting": {"type": "long"},
      "created_time": {
        "type": "date"
      },
      "created_block": {
        "type": "long"
      }
    }
  },
  "settings": {
    "index": {
      "max_result_window": "50000000",
      "number_of_replicas": 1
    }
  }
}