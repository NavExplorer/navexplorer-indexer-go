#!/usr/bin/env bash
set -e

if [ $# -eq 0 ]
  then
    tag="latest"
  else
    tag=$1
fi

echo "Using tag $tag"

dingo -src=./internal/config/di -dest=./generated

export DOCKER_BUILDKIT=1

docker build -f ./Dockerfile.indexerd . -t navexplorer/indexer:$tag
docker push navexplorer/indexer:$tag

